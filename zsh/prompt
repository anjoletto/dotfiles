# ---------------------------------------------------------------------------- #
# default configuration
# ---------------------------------------------------------------------------- #
fpath+=($HOME/.dots/tui-config/zsh/pure/)
autoload -U promptinit; promptinit
# ---------------------------------------------------------------------------- #

# ---------------------------------------------------------------------------- #
# change some options
# ---------------------------------------------------------------------------- #
PURE_CMD_MAX_EXEC_TIME=0
PURE_PROMPT_SYMBOL="->"
PURE_PROMPT_VICMD_SYMBOL=">>"

PURE_GIT_PULL=0
PURE_GIT_UNTRACKED_DIRTY=0

zstyle :prompt:pure:git:stash show yes

zstyle :prompt:pure:prompt:success color green
zstyle :prompt:pure:prompt:error color red
zstyle :prompt:pure:prompt:continuation color green

zstyle :prompt:pure:host color blue
zstyle :prompt:pure:path color cyan
zstyle :prompt:pure:user color cyan
zstyle :prompt:pure:user:root color red
zstyle :prompt:pure:virtualenv color yellow

zstyle :prompt:pure:git:branch color yellow
zstyle :prompt:pure:git:branch:cached color red
zstyle :prompt:pure:git:dirty color yellow
zstyle :prompt:pure:git:arrow color yellow
zstyle :prompt:pure:git:stash color yellow
zstyle :prompt:pure:git:action color red


zstyle :prompt:pure:execution_time color cyan
zstyle :prompt:pure:suspended_jobs color red

# ---------------------------------------------------------------------------- #

# ---------------------------------------------------------------------------- #
# use pure and set RPROMPT
# ---------------------------------------------------------------------------- #
prompt pure

P_TIME="%F{cyan}(%D{%H:%M:%S})"
RPROMPT=' %{$(echotc UP 1)%} $P_TIME%F{gray}%{$(echotc DO 1)%}'
# ---------------------------------------------------------------------------- #
