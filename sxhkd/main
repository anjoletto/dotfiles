# ------------------------------------------------------------ #
# default programs for every wm
# ------------------------------------------------------------ #
super + space
  rofi -show combi

super + Return
  xterm

super + Escape
  i3lock -c 000000 -e -f

super + n
    dunstctl history-pop

super + c
    dunstctl close-all

super + shift + c
    dunstctl close
# ------------------------------------------------------------ #

# ------------------------------------------------------------ #
# screenshots
# ------------------------------------------------------------ #
Print
  maim -s ~/screenshots/$(date +%s).png
# ------------------------------------------------------------ #

# ------------------------------------------------------------ #
# multimedia keys
# ------------------------------------------------------------ #
XF86Audio{Prev,Next}
 playerctl -p spotify {previous,next}

XF86AudioPlay
  playerctl -p spotify play-pause

XF86AudioMute
  pamixer -t

control + XF86AudioMute
  pamixer --source $(pamixer --list-source | grep KT | grep input | awk '{print $1}') -t

XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 1

control + XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 5

XF86MonBrightness{Up,Down}
  doas light -{A,U} 5
# ------------------------------------------------------------ #
